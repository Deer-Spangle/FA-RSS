{% macro render_submission(submission) %}
{% from 'feed_submission_preview_description.html.jinja2' import render_submission_description %}
<item>
  <title>{{ submission.title }}</title>
  <link>https://www.furaffinity.net/view/{{ submission.submission_id }}/</link>
  <description>
      {{ render_submission_description(submission) | forceescape }}
  </description>
  <guid>https://www.furaffinity.net/view/{{ submission.submission_id }}/</guid>
</item>
{% endmacro %}